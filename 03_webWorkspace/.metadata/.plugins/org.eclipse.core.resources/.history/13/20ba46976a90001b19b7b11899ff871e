<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
$(function(){
	$('#frm').submit(function(){
		var id = $('input:eq(0)').val();
		var pwd = $('input:eq(1)').val();
		if(id=="") {
			alert("아이디를 입력하세요.");
			
			return false;
			id.focus();
		}
		else if(pwd==""){
			alert("비밀번호를 입력하세요.");
			return false; 
			pwd.focus();
		}
	});
});
</script>
